<!doctype html>
<html lang="en">
  <head>
    <!-- <%- include("./partials/head.ejs") %> -->
    <% include ./partials/head %>
  </head>
  <body>
      <!-- <%- include("./partials/header.ejs") %> -->
      <% include ./partials/header %>


    <div id="hero-image-single" style="background-image:url('/images/<%= movie.hero_image %>')">
      <h1 id = "hero-title"><%= title %></h1>
    </div>

    <div class="content-padding clearfix">
      <div class="poster-wrapper">
        <img src="/images/<%= movie.poster %>" class="img-responsive">
      </div>
    <div class="description-wrapper">
      <div class="description">
        <h2 class="movie_header"> Описание</h2>
        <p><%= movie.description %></p>

      </div>

      <div class="main-characters">
        <h2 class="movie-header">Актеры</h2>
        <ul>
          <% for (var i = 0; i < main_characters.length; i++) { %>
            <li><%= main_characters[i] %></li>
          <% } %>
        </ul>

      </div>

      <div class="trailer">
        <!-- <src><%= movie.trailer %></src> -->

        <iframe width="560" height="315"
        src="<%= movie.trailer %>"
        title="YouTube video player"
         frameborder="0"
         allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

      </div>

    </div>
    </div>
<!-- <%- include("./partials/scripts.ejs") %> -->
  <% include ./partials/scripts %>
  </body>
</html>
